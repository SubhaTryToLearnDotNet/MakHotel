<script>
    function getDistance() {
        const location = document.getElementById("userLocation").value;
        const resultBox = document.getElementById("resultBox");
        const errorBox = document.getElementById("errorBox");

        errorBox.innerText = "";
        resultBox.innerHTML = "Calculating...";

        fetch('/Home/GetDistanceAjax', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: `userLocation=${encodeURIComponent(location)}`
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                resultBox.innerHTML = `<strong>${data.distance}</strong><br/>Km`;
            } else {
                resultBox.innerHTML = "Result<br/>Km";
                errorBox.innerText = data.message;
            }
        })
        .catch(() => {
            resultBox.innerHTML = "Result<br/>Km";
            errorBox.innerText = "Something went wrong";
        });
    }
</script>
