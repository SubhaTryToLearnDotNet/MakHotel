@using MakQR.Models.Home
@model ReviewItem
<div class="admin-page">
    <div class="hotel-form-card">
        <h3 class="form-title">Update Review</h3>

        <form id="UpdateReviewForm" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Comment (HTML allowed)</label>
                <textarea asp-for="CommentHtml" class="form-control" rows="4"></textarea>
            </div>

            <div class="mb-3">
                <label>Tag</label>
                <input asp-for="Tag" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Update</button>
        </form>
    </div>
</div>
<script>
    document.getElementById("UpdateReviewForm").addEventListener("submit", async function (e) {
        e.preventDefault();

        const form = document.getElementById("UpdateReviewForm");
        const submitBtn = form.querySelector("button[type='submit']");
        const formData = new FormData(form);

        submitBtn.disabled = true;

        Swal.fire({
            title: 'Updating Review...',
            text: 'Please wait',
            allowOutsideClick: false,
            didOpen: () => Swal.showLoading()
        });

        try {
            const response = await fetch('/Reviews/UpdateReview', {
                method: 'POST',
                body: formData
            });

            if (!response.ok) {
                throw new Error("Request failed");
            }

            const data = await response.json();

            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Updated!',
                    text: data.message,
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/Reviews';
                    }
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Failed',
                    text: data.message
                });
            }
        } catch (err) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Something went wrong while updating the review'
            });
            console.error(err);
        } finally {
            submitBtn.disabled = false;
        }
    });
</script>



