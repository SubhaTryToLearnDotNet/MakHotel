@using MakQR.Models.Home
@model BannerSection
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MAK HOTEL</title>
    <link rel="icon" type="image/png" href="./images/5-stars.png">
    <link href="./css/stylewebsite.css?v=2.0.0" rel="stylesheet" asp-append-version="true" />
    <!--bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>


</head>
<body>
    <!-- LOGO HEADER -->
    <div class="logo-header">
        <div class="logo-wrap">
            <img src="./images/ChatGPT_Image_Feb_3__2026__12_25_12_PM-removebg-preview.png" alt="Hotel Logo">
            <span class="logo-text">MAK Hotel</span>
            <p>MAK Enterprise Pvt. Ltd.</p>
        </div>
    </div>
    <!-- Hero Banner -->
    <div id="hotelBanner" class="carousel slide" data-bs-ride="carousel">

        <div class="carousel-inner">

            <div class="carousel-item active">
                <img src="./images/banner_img.png"
                     class="d-block w-100 banner-img" alt="MAK Hotel">

                <div class="banner-overlay"></div>

                <div class="carousel-caption">

                    <h1>@Model.TitleHtml1</h1>
                    <p>@Model.Subtitle1</p>
                    <a href="@Model.ButtonUrl1" class="btn btn-light px-4">@Model.ButtonText1</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="./images/banner_img1.png"
                     class="d-block w-100 banner-img" alt="MAK Hotel">

                <div class="banner-overlay"></div>

                <div class="carousel-caption">

                    <h1>@Model.TitleHtml2</h1>
                    <p>@Model.Subtitle2</p>
                    <a href="@Model.ButtonUrl2" class="btn btn-light px-4">@Model.ButtonText2</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="./images/banner_img2.png"
                     class="d-block w-100 banner-img" alt="MAK Hotel">

                <div class="banner-overlay"></div>

                <div class="carousel-caption">

                    <h1>@Model.TitleHtml3</h1>
                    <p>@Model.Subtitle3</p>
                    <a href="@Model.ButtonUrl3" class="btn btn-light px-4">@Model.ButtonText3</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="./images/banner_img3.png"
                     class="d-block w-100 banner-img" alt="MAK Hotel">

                <div class="banner-overlay"></div>

                <div class="carousel-caption">

                    <h1>@Model.TitleHtml4</h1>
                    <p> @Model.Subtitle4</p>
                    <a href="@Model.ButtonUrl4" class="btn btn-light px-4">@Model.ButtonText4</a>
                </div>
            </div>


        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#hotelBanner" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#hotelBanner" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>

    </div>

    @await Component.InvokeAsync("HomeAbout")

    @await Component.InvokeAsync("HomeWhyUs")

    @await Component.InvokeAsync("Amenities")

    @await Component.InvokeAsync("RoomsSection")

    @await Component.InvokeAsync("Rooms")

    @await Component.InvokeAsync("HomeEvent")

    <section class="gallery-section">
        <h2>Facility And Gallery</h2>

        <div class="gallery-grid">
            <div class="gallery-card">
                <img src="./images/gallery_img.png" alt="">
            </div>
            <div class="gallery-card">
                <img src="./images/gallery_img1.png" alt="">
            </div>
            <div class="gallery-card">
                <img src="./images/gallery_img2.png" alt="">
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("HomeReview")

    <section class="location-section">
        <div class="overlay">
            <h2>Distance (kms) from 222, Amarjyothi Layout, Domlur, Bangalore</h2>
            <ul>
                <li>Embassy Golf Links (IT Park) – 850 m</li>
                <li>Nearest Metro Station (Halasuru) – 1.8 km</li>
                <li>Indian Air Force (Base Office) – 2 km</li>
                <li>Hindustan Aeronautics Limited (HAL) – 3 km</li>
                <li>SMVT Railway Station – 5 km</li>
                <li>Karnataka Legislative Assembly (Vidhana Soudha) – 8 km</li>
                <li>Kempegowda International Airport – 42 km</li>
            </ul>
        </div>
    </section>


    <!-- Google Map using given Latitude & Longitude -->
    <section class="map-section">
        <div class="map-layout">

            <!-- LEFT: Modern Search Panel -->
            <div class="search-panel">
                <div class="search-card animate-card">

                    <span class="hotel-badge">MAK HOTEL</span>

                    <h3>Find Distance</h3>
                    <p>See how far you are from our hotel</p>

                    <div class="input-group">
                        <input type="text"
                               id="userLocation"
                               placeholder="City / Area / PIN code" />
                    </div>

                    <button class="search-btn" onclick="getDistance()">
                        Search Distance
                    </button>

                    <div class="result-box" id="resultBox">
                        -- Km
                    </div>

                    <div id="errorBox" class="error-box"></div>

                </div>
            </div>

            <!-- RIGHT: Map (75%) -->
            <div class="map-box">
                <iframe src="https://www.google.com/maps?q=12.955369955637972,77.64351675545757&z=15&output=embed"
                        loading="lazy">
                </iframe>
            </div>

        </div>
    </section>
    @await Component.InvokeAsync("Footer")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<script>
    function getDistance() {
        const location = document.getElementById("userLocation").value;
        const resultBox = document.getElementById("resultBox");
        const errorBox = document.getElementById("errorBox");

        errorBox.innerText = "";
        resultBox.innerHTML = "Calculating...";

        fetch('/Home/GetDistanceAjax', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: `userLocation=${encodeURIComponent(location)}`
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                resultBox.innerHTML = `<strong>${data.distance}</strong><br/>Km`;
            } else {
                resultBox.innerHTML = "Result<br/>Km";
                errorBox.innerText = data.message;
            }
        })
        .catch(() => {
            resultBox.innerHTML = "Result<br/>Km";
            errorBox.innerText = "Something went wrong";
        });
    }
</script>
