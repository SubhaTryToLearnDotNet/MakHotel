@using MakQR.Models.Dtos
@model ReviewRequestDto
<div class="admin-page">
    <div class="hotel-form-card">
        <h2 class="form-title">Add New Review</h2>

        <form id="ReviewForm"
              method="post">

            <div class="mb-3">
                <label class="form-label">Reviewer Name</label>
                <input asp-for="Name" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Comment (HTML allowed)</label>
                <textarea asp-for="CommentHtml"
                          class="form-control"
                          rows="4"
                          required></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Tag</label>
                <input asp-for="Tag" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Save Review</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>

        </form>
    </div>
</div>
<script>
    document.getElementById("ReviewForm").addEventListener("submit", async function (e) {
        e.preventDefault();

        const form = document.getElementById("ReviewForm");
        const submitBtn = form.querySelector("button[type='submit']");
        const formData = new FormData(form);

        submitBtn.disabled = true;

        Swal.fire({
            title: 'Saving Review...',
            text: 'Please wait',
            allowOutsideClick: false,
            didOpen: () => Swal.showLoading()
        });

        try {
            const response = await fetch('/Reviews/AddReview', {
                method: 'POST',
                body: formData
            });

            if (!response.ok) {
                throw new Error("Request failed");
            }

            const data = await response.json();

            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Saved!',
                    text: data.message,
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {

                        window.location.href = '/Admin/Reviews';
                    }
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Failed',
                    text: data.message
                });
            }
        } catch (err) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Something went wrong while saving the review'
            });
            console.error(err);
        } finally {
            submitBtn.disabled = false;
        }
    });
</script>




